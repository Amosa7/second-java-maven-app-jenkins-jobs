#!/usr/bin/env groovy



@Library('Jenkins-shared-lib') 

def gv

pipeline {
    tools {
        maven "maven-3.9"
    }
    agent any
    stages {

        stage("init") {
            steps {
                script {
                    gv = load "script.groovy"
                }
            }
        }

        stage("BuildApp") {
            steps {
                script {
                    buildJar()
                }
            }
        }

        stage("Testing") {
            steps {
                script {
                    gv.Testing()
                }
            }
        }

        stage("Build and Push Image") {
            steps {
                script {
                  buildImage()  
                }
            }
        }

        stage("DeployJAr") {
            steps {
                script {
                    gv.DeployJAr()
                }
            }
        }
    }
}
